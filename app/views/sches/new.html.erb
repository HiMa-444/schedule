<h1>予定の追加</h1>
<% if flash[:nocre]%>
  <%= flash[:nocre]%>
<% end%>
<%= form_with model: @sch do |sch|%>
  <tr>
    <th><%= sch.label :title, "タイトル"%></th>
    <td><%= sch.text_field :title%></td>
    
    <th><%= sch.label :sday, "開始日"%></th>
    <td><%= sch.date_field :sday%></td>
    
    <th><%= sch.label :eday, "終了日"%></th>
    <td><%= sch.date_field :eday%></td>
    
    <th><%= sch.label :all, "終日"%></th>
    <td><%= sch.check_box :all%></td>
    
    <th><%= sch.label :memo, "予定"%></th>
    <td><%= sch.text_field :memo%></td>
  </tr>
  <p><%= sch.submit "予定の追加"%></p>
  <p><%= link_to "戻る", sches_path%></p>
<% end%>